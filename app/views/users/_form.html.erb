<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control' %>
               
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>

            <%= f.label :cell %>
            <%= f.text_field :cell, class: 'form-control' %>

            <%= f.label :address_line_one %>
            <%= f.text_field :address_line_one, class: 'form-control' %>

            <%= f.label :address_line_two %>
            <%= f.text_field :address_line_two, class: 'form-control' %>

            <%= f.label :city %>
            <%= f.text_field :city, class: 'form-control' %>

            <%= f.label :state %>
            <%= f.text_field :state, class: 'form-control' %>

            <%= f.label :zipcode %>
            <%= f.number_field :zipcode, class: 'form-control' %>

            <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
