<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table>
  <thead>
    <tr>
      <th>Start long</th>
      <th>Start lat</th>
      <th>End long</th>
      <th>End lat</th>
      <th>Distance</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.start_long %></td>
        <td><%= route.start_lat %></td>
        <td><%= route.end_long %></td>
        <td><%= route.end_lat %></td>
        <td><%= route.distance %></td>
        <td><%= route.price %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

